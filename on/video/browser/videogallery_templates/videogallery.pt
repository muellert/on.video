<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="plone">

<body>
    <metal:css fill-slot="css_slot">
      <style type="text/css" media="all"
        tal:content="string: @import url(${context/++resource++videolisting.css});"></style>
    </metal:css>

    <metal:content-core fill-slot="content-core">
        <!--metal:block use-macro="context/folder_listing/macros/content-core" -->
         <metal:listingmacro define-macro="listing">
           <tal:foldercontents define="limit_display limit_display|request/limit_display|nothing;
                                       limit_display python:limit_display and int(limit_display) or None;
                                       more_url more_url|request/more_url|string:folder_contents;
                                       fl view/contents;
                                       site_properties context/portal_properties/site_properties;
                                       use_view_action site_properties/typesUseViewActionInListings|python:();
                                       Batch python:modules['Products.CMFPlone'].Batch;
                                       b_start python:request.get('b_start', 0);
                                       batch python:isinstance(fl, Batch) and fl or Batch(fl, limit_display or 10, int(b_start), orphan=1);
                                       normalizeString nocall: context/plone_utils/normalizeString;
                                       navigation_root_url context/@@plone_portal_state/navigation_root_url">
                <tal:listing condition="batch">

                  <div metal:use-macro="context/batch_macros/macros/navigation" />

                     <tal:loop repeat="item view/contents">
		       <a href="#" tal:attributes="href item/id">
		         <h4 tal:content="item/title" />
		         <img src="#" tal:attributes="src nocall: item/thumb|item/banner" width="100" height="100" />
		       </a>
		       <br />
		       <div tal:condition="python:item['portaltype'] == 'Folder'">
			 <span tal:replace="item/sub_folder" /> galleries, <span tal:replace="item/sub_videos" /> videos
		       </div>
		       <div tal:condition="python:item['portaltype'] == 'on.video.Video'">
			 Duration: <span tal:replace="item/playingtime" />
		       </div>
		       
		     </tal:loop>
		       <div metal:use-macro="context/batch_macros/macros/navigation" />

                <!--/metal:entries-->
 	      </tal:listing>
	    </tal:foldercontents>
          </metal:listingmacro>
        <!--/metal:block-->
    </metal:content-core>
</body>
</html>
